    <%= render 'layouts/menu' %>
     <h1>Список категорий</h1>
	<div class="single">
      <table class="table">
       <% @categories.each do |category|%>
            <tr data-item_id="<%= category.id %>">
               <td><%= link_to category.name, category_path(category) %></td>
               
<% if user_signed_in? %>
                    <td><button type="button" class="edit-category btn btn-warning btn-xs">редактировать</button>
                   <button type="button" class="delete-category btn btn-danger btn-xs">удалить</button></td>
<% end %>
            </tr>
        <% end %>
      </table>
  </div>

