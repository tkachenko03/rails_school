    <%= render 'layouts/menu' %>
     <h1>Список категорий</h1>
	<div class="single">
      <table class="table">
       <% @categories.each do |category|%>
            <tr data-item_id="<%= category.id %>">
              <td><button type="button" class="delete-category btn btn-danger btn-xs">x</button></td>
              <td><%= link_to category.name, category_path(category) %></td>
            </tr>
        <% end %>
      </table>
  </div>

